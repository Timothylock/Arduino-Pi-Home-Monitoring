<!--
Tim Pi Home Monitoring Configuration
The options should be self explanatory. Just edit the values associated with them
-->
<config>
	<!-- Allows you to enable/disable individual modules -->
	<modulesEnable>
		<module name="20x4LCD" enable="true"/>
		<module name="SMS" enable="true"/>
		<module name="Sound" enable="true"/>
		<module name="Weather" enable="true"/>
	</modulesEnable>
	<!-- Allows you to edit data for each module -->
	<modulesSettings>
		<SMS>
			<notifyOnDoorOpen enable="true"/>
			<number num="+15555555555"/>
			<number num="+15555551234"/>
		</SMS>
		<weather>
			<!-- Google for your woeid -->
			<woeid loc="4118"/>
			<unit value="C"/>
		</weather>
	</modulesSettings>
</config>